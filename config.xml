<?xml version='1.0' encoding='utf-8'?>
<widget id="com.Paymh.consult2mobile" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>consult2mobile</name>
    <description>
        A mobile app to read data through a serial cable plugged in via the device's OTG port
    </description>
    <author email="lachlan.horsey@gmail.com" href="https://github.com/Paymh">
        Lachlan 'Paymh' Horsey
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="android" spec="~6.3.0" />
    <plugin name="fr.drangies.cordova.serial" spec="~0.0.7" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="cordova-plugin-geolocation" spec="^2.4.3">
        <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Used for retrieving geolocation." />
    </plugin>
</widget>
